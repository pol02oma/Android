<html>
<head> 
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" /> 
<meta http-equiv="content-type" content="text/html; charset=UTF-8"/> 
<title>Simple V3 Map for Android</title> 
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script> 
<script type="text/javascript" src="http://code.google.com/apis/gears/gears_init.js"></script>

<style type="text/css">
   html{height:100%;}
   body{height:100%;margin:0px;padding:0px;overflow: hidden;}
   .info-window{font-size:12px;overflow:hidden; margin-top:5px;}
   .info-window h1{font-size:1.3em;color:#666;margin:0px;padding:0px;}
   .info-window p{margin:0px; padding-top:.2em; overflow:hidden;}
   .info-window a{display:block;float:right;margin:5px 10px;text-decoration:none;}
   .info-window img{border:0px;}
</style>

<script type="text/javascript"> 
   var myMap = {
      map: null,
      infoWindow: null,
      points: [],
      markers: [],
      info: []
   };

   RePLaCe
   
   myMap.closeInfoWindow = function() {
      myMap.infoWindow.close();
   };
   
   myMap.openInfoWindow = function(n) {
      myMap.infoWindow.setContent(myMap.info[n]);
      myMap.infoWindow.open(myMap.map, myMap.markers[n]);
   };

   myMap.init = function() {
      myMap.infoWindow = new google.maps.InfoWindow();

      var latlng = new google.maps.LatLng(rEplAcElAt, rEplAcElng);

      //if(myMap.points.length > 0)
         //latlng = new google.maps.LatLng(myMap.points[0].latitude, myMap.points[0].longitude);

      var options = {zoom: rEplAcEzOOm, center: latlng, mapTypeId: google.maps.MapTypeId.ROADMAP};
      myMap.map = new google.maps.Map(document.getElementById("map_canvas"), options);

      for(var i = 0; i < myMap.points.length; i++) {
         var n = myMap.points.length - i;
         var location = new google.maps.LatLng(myMap.points[i].latitude, myMap.points[i].longitude);
         myMap.markers[n] = new google.maps.Marker({position: location, map: myMap.map, zIndex:n});

         myMap.markers[n].setTitle(myMap.points[i].point);

         var info = '';
         if(myMap.points[i].url){
            info = '<div class="info-window">'+
                    '<a href="'+myMap.points[i].url+'"' + (window.ISWEBAPP ? ' target="_blank"' : '') + '><img src="../media/img/googlemap-url.png" alt="&gt;" /></a>'+
                    '<h1>'+myMap.points[i].point+'</h1>'+
                    '<p>'+myMap.points[i].details+'</p>'+
                    '</div>';
         } else {
            info = '<div class="info-window">'+
                    '<h1>'+myMap.points[i].point+'</h1>'+
                    '<p>'+myMap.points[i].details+'</p>'+
                    '</div>';
         }


         myMap.info[n] = info;
         google.maps.event.addListener(myMap.markers[n], 'click', function(){myMap.openInfoWindow(this.getZIndex())});
      }
   };

</script> 
</head> 
<body style="margin:0px; padding:0px;" onload="myMap.init()"> 
  <div id="map_canvas" style="width:100%; height:100%"></div> 
</body> 
</html> 